<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="HideTitleAndActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
    <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
  </style>
  
	<style name="AppTheme" parent="android:Theme.Light">
	    <item name="defaultCardButtonStyle">@style/card_button</item>
	</style>

	<style name="card_button" parent="android:Widget.Button">
		<item name="android:layout_width" >match_parent</item>
		<item name="android:layout_height" >match_parent</item>
		<item name="android:background" >#ffd5d5d5</item>
		<item name="android:layout_weight" >1</item>
		<item name="android:gravity" >center</item>
		<item name="android:textSize" >11dp</item>
		<item name="android:textColor">#ff665f5f</item>
	</style>

  <style name="ToolbarPageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item> 
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">#70AADD</item>
    <item name="android:colorPrimaryDark">#000000</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="colorControlNormal">#FFFFFF</item>
  </style>

  <style name="floatlabelededittext">
    <item name="android:textColor">#3D89CC</item>
    <item name="android:textSize" >12sp</item>
  </style>

</resources>

