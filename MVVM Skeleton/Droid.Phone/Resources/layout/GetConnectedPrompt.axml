<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:p1="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    p1:minWidth="25px"
    p1:minHeight="25px"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:fillViewport="true"
    p1:id="@+id/GetConnectedPromptScrollView">
    <RelativeLayout
        p1:minWidth="250dp"
        p1:minHeight="250dp"
        p1:id="@+id/GetConnectedPromptLayout"
        p1:layout_width="match_parent"
        p1:layout_height="match_parent"
        p1:background="#F7F3DE">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            p1:layout_width="150dp"
            p1:layout_height="10dp"
            p1:id="@+id/GetConnectedPromptProgressBar"
            p1:layout_alignParentRight="true"
            p1:layout_alignParentTop="true"
            p1:progress="25"
            p1:layout_marginRight="75dp"
            p1:layout_marginTop="15dp"
            p1:progressDrawable="@drawable/ProgressBar" />
        <Droid.Controls.PSTextView
            p1:text="progress"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_toLeftOf="@id/GetConnectedPromptProgressBar"
            p1:layout_marginRight="2dp"
            p1:id="@+id/GetConnectedProgressBarText"
            p1:textSize="12sp"
            custom:customFont="Fonts/Futura-Book.ttf"
            p1:textColor="#C5C5B9"
            p1:layout_marginTop="10dp"
            p1:layout_alignParentTop="true" />
        <ImageView
            p1:layout_centerInParent="true"
            p1:layout_width="wrap_content"
            p1:layout_height="70dp"
            p1:id="@+id/GetConnectedPromptImage"
            p1:src="@android:drawable/ic_menu_gallery"
            p1:layout_alignParentTop="true"
            p1:layout_marginTop="50dp" />
        <Droid.Controls.PSTextView
            p1:text="Title Text Displays Here In Full"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_below="@id/GetConnectedPromptImage"
            p1:id="@+id/GetConnectedPromptTitle"
            p1:layout_centerHorizontal="true"
            p1:textSize="28sp"
            p1:textColor="#555555"
            custom:customFont="Fonts/ShadowsIntoLightTwo-Regular.ttf"
            p1:gravity="center"
            p1:layout_alignParentLeft="true"
            p1:layout_alignParentRight="true"
            p1:layout_marginLeft="25dp"
            p1:layout_marginRight="25dp"
            p1:layout_marginTop="25dp" />
        <Droid.Controls.PSTextView
            p1:text="This is the description field that is below title text."
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_below="@id/GetConnectedPromptTitle"
            p1:gravity="center"
            p1:textSize="14sp"
            p1:textColor="#808080"
            custom:customFont="Fonts/CenturyGothic.ttf"
            p1:layout_alignParentLeft="true"
            p1:layout_alignParentRight="true"
            p1:id="@+id/GetConnectedPromptDescription"
            p1:layout_marginTop="10dp"
            p1:layout_marginLeft="40dp"
            p1:layout_marginRight="40dp" />
        <LinearLayout
            p1:orientation="vertical"
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="match_parent"
            p1:layout_height="match_parent"
            p1:layout_below="@id/GetConnectedPromptDescription"
            p1:id="@+id/linearLayout1">
            <Droid.Controls.PSTextView
                p1:text="Search Hint Text"
                p1:layout_width="match_parent"
                p1:layout_height="50dp"
                p1:id="@+id/GetConnectedPromptSearch"
                p1:drawableLeft="@drawable/ic_magn"
                p1:drawablePadding="10dp"
                p1:gravity="center_vertical"
                p1:background="@drawable/RoundBorderTextView"
                p1:layout_marginLeft="15dp"
                p1:layout_marginRight="15dp"
                p1:paddingLeft="10dp"
                p1:textSize="16sp"
                p1:textColor="#808080"
                custom:customFont="Fonts/CenturyGothic.ttf"
                p1:layout_marginBottom="15dp"
                p1:layout_marginTop="10dp" />
            <LinearLayout
                p1:orientation="horizontal"
                p1:minWidth="25px"
                p1:minHeight="25px"
                p1:layout_width="match_parent"
                p1:layout_height="wrap_content"
                p1:id="@+id/linearLayout2"
                p1:gravity="center_horizontal"
                p1:layout_weight="1">
                <View
                    p1:layout_width="60dp"
                    p1:layout_height="1dp"
                    p1:background="#C5C5B9"
                    p1:layout_marginRight="15dp"
                    p1:layout_gravity="center_vertical" />
                <Droid.Controls.PSTextView
                    p1:text="or"
                    p1:layout_width="wrap_content"
                    p1:layout_height="wrap_content"
                    p1:id="@+id/GetConnectedPromptOrText"
                    p1:textSize="14sp"
                    p1:textColor="#C5C5B9"
                    custom:customFont="Fonts/Futura-Book.ttf"
                    p1:layout_gravity="center"
                    p1:gravity="center_horizontal" />
                <View
                    p1:layout_width="60dp"
                    p1:layout_height="1dp"
                    p1:background="#C5C5B9"
                    p1:layout_marginLeft="15dp"
                    p1:layout_alignTop="@id/GetConnectedPromptOrText"
                    p1:layout_gravity="center_vertical" />
            </LinearLayout>
            <Droid.Controls.PSButton
                p1:text="Button Text"
                p1:layout_width="match_parent"
                p1:layout_height="50dp"
                p1:id="@+id/GetConnectedPromptIHaveNone"
                p1:layout_centerHorizontal="true"
                p1:background="@drawable/CompassBlueButton"
                p1:textColor="#FFFFFF"
                custom:customFont="Fonts/FuturaStd-Bold.ttf"
                p1:textSize="16sp"
                p1:textStyle="bold"
                p1:layout_alignParentBottom="true"
                p1:layout_marginLeft="25dp"
                p1:layout_marginRight="25dp"
                p1:layout_marginBottom="15dp"
                p1:layout_marginTop="5dp" />
            <Droid.Controls.PSButton
                p1:text="Do this later"
                p1:layout_width="match_parent"
                p1:layout_height="50dp"
                p1:id="@+id/GetConnectedPromptSkipButton"
                p1:layout_marginLeft="25dp"
                p1:layout_marginRight="25dp"
                p1:layout_marginBottom="15dp"
                p1:background="@android:color/transparent"
                p1:textColor="#3989CC"
                custom:customFont="Fonts/Futura-Book.ttf"
                p1:textSize="16sp"
                p1:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>