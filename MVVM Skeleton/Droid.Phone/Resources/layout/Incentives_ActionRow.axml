<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/actionRow_Top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECE4B7" />
    <LinearLayout
        android:layout_below="@+id/actionRow_Top"
        android:id="@+id/actionRow_MainRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFDF7"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/actionRow_Icon"
            android:src="@drawable/EmptyCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_weight="10"
            android:id="@+id/actionRow_InformationLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <Droid.Controls.PSTextView
                custom:customFont="Fonts/CenturyGothic.ttf"
                android:id="@+id/actionRow_Description"
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#555555"
                android:textSize="17sp" />
            <Droid.Controls.PSTextView
                custom:customFont="Fonts/CenturyGothic.ttf"
                android:id="@+id/actionRow_DateInfo"
                android:text="Date Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#555555" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:id="@+id/actionRow_PriceLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp">
            <Droid.Controls.PSTextView
                custom:customFont="Fonts/CenturyGothicBold.ttf"
                android:id="@+id/actionRow_Price"
                android:text="$000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="right"
                android:textSize="17sp"
                android:textColor="#555555" />
            <Droid.Controls.PSTextView
                custom:customFont="Fonts/CenturyGothic.ttf"
                android:id="@+id/actionRow_PayType"
                android:text="Payout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="right"
                android:textColor="#A9A9A9"
                android:textSize="10sp" />
        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/actionRow_Arrow"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <View
        android:layout_below="@+id/actionRow_MainRow"
        android:id="@+id/actionRow_Bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECE4B7" />
</RelativeLayout>