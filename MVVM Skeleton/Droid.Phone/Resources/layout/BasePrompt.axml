<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    p1:minWidth="250dp"
    p1:minHeight="250dp"
    p1:id="@+id/BasePromptLayout"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:background="#F7F3DE">
    <include
        p1:id="@+id/BasePromptToolbar"
        p1:layout_alignParentTop="true"
        layout="@layout/Toolbar" />
    <ScrollView
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="match_parent"
        p1:layout_height="match_parent"
        p1:layout_below="@id/BasePromptToolbar"
        p1:fillViewport="true"
        p1:id="@+id/BasePromptScrollView">
        <RelativeLayout
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="match_parent"
            p1:layout_height="match_parent"
            p1:id="@+id/BasePromptScrollViewLayout">
            <RelativeLayout
                p1:minWidth="25px"
                p1:minHeight="25px"
                p1:layout_width="match_parent"
                p1:layout_height="wrap_content"
                p1:id="@+id/BasePromptHeaderLayout"
                p1:paddingBottom="15dp">
                <ImageView
                    p1:layout_centerInParent="true"
                    p1:layout_alignParentTop="true"
                    p1:layout_width="wrap_content"
                    p1:layout_height="wrap_content"
                    p1:id="@+id/BasePromptImage"
                    p1:src="@android:drawable/ic_menu_gallery"
                    p1:layout_marginTop="20dp" />
                <Droid.Controls.PSTextView
                    p1:text="Title Text Displays Here In Full"
                    p1:layout_width="wrap_content"
                    p1:layout_height="wrap_content"
                    p1:layout_below="@id/BasePromptImage"
                    p1:id="@+id/BasePromptTitle"
                    p1:layout_centerHorizontal="true"
                    p1:textSize="20sp"
                    p1:textColor="#555555"
                    custom:customFont="Fonts/ShadowsIntoLightTwo-Regular.ttf"
                    p1:gravity="center"
                    p1:layout_alignParentLeft="true"
                    p1:layout_alignParentRight="true"
                    p1:layout_marginLeft="25dp"
                    p1:layout_marginRight="25dp"
                    p1:layout_marginTop="10dp" />
                <Droid.Controls.PSTextView
                    p1:text="This is the description field that is below title text."
                    p1:layout_width="wrap_content"
                    p1:layout_height="wrap_content"
                    p1:layout_below="@id/BasePromptTitle"
                    p1:gravity="center"
                    p1:textSize="10sp"
                    p1:textColor="#808080"
                    custom:customFont="Fonts/CenturyGothic.ttf"
                    p1:layout_alignParentLeft="true"
                    p1:layout_alignParentRight="true"
                    p1:id="@+id/BasePromptDescription"
                    p1:layout_marginTop="10dp"
                    p1:layout_marginLeft="40dp"
                    p1:layout_marginRight="40dp" />
            </RelativeLayout>
            <LinearLayout
                p1:orientation="vertical"
                p1:minWidth="25px"
                p1:minHeight="25px"
                p1:layout_width="match_parent"
                p1:layout_height="wrap_content"
                p1:layout_below="@id/BasePromptHeaderLayout"
                p1:id="@+id/BasePromptFormLinearLayout">
                <LinearLayout
                    p1:orientation="vertical"
                    p1:minWidth="25px"
                    p1:minHeight="25px"
                    p1:background="#ECE4B7"
                    p1:paddingTop="1dp"
                    p1:paddingBottom="1dp"
                    p1:layout_width="match_parent"
                    p1:layout_height="wrap_content"
                    p1:id="@+id/BasePromptFLETLayout">
                    <Droid.Controls.FloatLabeledEditText
                        p1:id="@+id/BasePromptDropDown"
                        p1:layout_width="fill_parent"
                        p1:layout_height="wrap_content"
                        p1:drawablePadding="10dp"
                        custom:fletCustomPicker="true"
                        p1:background="@drawable/CompassFlatWhiteEditText"
                        custom:fletTextAppearance="@style/floatlabelededittext"
                        p1:visibility="gone">
                        <EditText
                            p1:focusableInTouchMode="false"
                            p1:layout_width="fill_parent"
                            p1:layout_height="wrap_content"
                            p1:hint="Hint Label"
                            p1:background="#00000000"
                            p1:textSize="16sp"
                            p1:textColor="#555555"
                            p1:textColorHint="#A9A9A9" />
                        <ImageView
                            p1:padding="5dp"
                            p1:layout_width="wrap_content"
                            p1:layout_height="wrap_content"
                            p1:layout_gravity="right|center_vertical" />
                    </Droid.Controls.FloatLabeledEditText>
                    <Droid.Controls.FloatLabeledEditText
                        p1:id="@+id/BasePromptOtherField"
                        p1:layout_width="fill_parent"
                        p1:layout_height="wrap_content"
                        p1:drawablePadding="10dp"
                        p1:layout_marginTop="1dp"
                        p1:background="@drawable/CompassFlatWhiteEditText"
                        custom:fletTextAppearance="@style/floatlabelededittext"
                        p1:visibility="gone">
                        <EditText
                            p1:layout_width="fill_parent"
                            p1:inputType="text"
                            p1:layout_height="wrap_content"
                            p1:hint="Hint Label"
                            p1:background="#00000000"
                            p1:textSize="16sp"
                            p1:textColor="#555555"
                            p1:imeOptions="actionDone"
                            p1:textColorHint="#A9A9A9" />
                        <ImageView
                            p1:padding="5dp"
                            p1:layout_width="wrap_content"
                            p1:layout_height="wrap_content"
                            p1:layout_gravity="right|center_vertical" />
                    </Droid.Controls.FloatLabeledEditText>
                </LinearLayout>
                <Droid.Controls.PSTextView
                    p1:text="Search Hint Text"
                    p1:layout_width="match_parent"
                    p1:layout_height="50dp"
                    p1:id="@+id/BasePromptSearch"
                    p1:drawableLeft="@drawable/ic_magn"
                    p1:drawablePadding="10dp"
                    p1:gravity="center_vertical"
                    p1:background="@drawable/RoundBorderTextView"
                    p1:layout_marginLeft="15dp"
                    p1:layout_marginRight="15dp"
                    p1:paddingLeft="10dp"
                    p1:textSize="16sp"
                    p1:textColor="#808080"
                    custom:customFont="Fonts/CenturyGothic.ttf"
                    p1:layout_marginBottom="15dp"
                    p1:layout_marginTop="10dp"
                    p1:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                p1:orientation="vertical"
                p1:minWidth="25px"
                p1:minHeight="25px"
                p1:layout_width="match_parent"
                p1:layout_height="wrap_content"
                p1:layout_marginTop="15dp"
                p1:id="@+id/BasePromptButtonLayout"
                p1:layout_below="@id/BasePromptFormLinearLayout">
                <Droid.Controls.PSButton
                    p1:text="Add Them"
                    p1:layout_width="240dp"
                    p1:layout_height="50dp"
                    p1:id="@+id/BasePromptButtonOne"
                    p1:layout_centerHorizontal="true"
                    p1:background="@drawable/CompassOrangeButton"
                    p1:textColor="#FFFFFF"
                    custom:customFont="Fonts/FuturaStd-Bold.ttf"
                    p1:textSize="16sp"
                    p1:textStyle="bold"
                    p1:layout_marginBottom="0dp"
                    p1:layout_gravity="center_horizontal" />
                <Droid.Controls.PSButton
                    p1:background="#00000000"
                    p1:text="Cancel"
                    p1:layout_marginBottom="10dp"
                    p1:layout_width="240dp"
                    p1:layout_height="wrap_content"
                    p1:id="@+id/BasePromptButtonTwo"
                    p1:textColor="#3D89CC"
                    custom:customFont="Fonts/Futura-Book.ttf"
                    p1:textSize="16sp"
                    p1:layout_alignParentBottom="true"
                    p1:layout_gravity="center_horizontal" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>