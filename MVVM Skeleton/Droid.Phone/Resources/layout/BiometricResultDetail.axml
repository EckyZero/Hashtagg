<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F7F3DE">
    <include
        android:id="@+id/incentive_biometricResultDetail_toolbar"
        layout="@layout/Toolbar" />
    <ScrollView
        android:layout_below="@+id/incentive_biometricResultDetail_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/incentive_biometricResultDetail_summary"
                layout="@layout/BiometricResultDetailRow"
                android:layout_marginTop="15dp" />
            <LinearLayout
                android:layout_below="@+id/incentive_biometricResultDetail_summary"
                android:id="@+id/incentive_biometricResultDetail_text_layout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F7F3DE"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_below="@+id/incentive_biometricResultDetail_text_layout"
                    android:id="@+id/incentive_biometricResultDetail_text_paragraphOne"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7F3DE"
                    android:paddingTop="5dp"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp">
                    <ImageView
                        android:src="@drawable/procedures"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView1" />
                    <Droid.Controls.PSTextView
                        custom:customFont="Fonts/CenturyGothicBold.ttf"
                        android:id="@+id/incentive_biometricResultDetail_definition_txt"
                        android:text="Biometric Result Definition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/incentive_biometricResultDetail_text_layout"
                    android:id="@+id/incentive_biometricResultDetail_text_paragraphTwo"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7F3DE"
                    android:paddingTop="5dp"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <Droid.Controls.PSTextView
                        custom:customFont="Fonts/CenturyGothic.ttf"
                        android:id="@+id/incentive_biometricResultDetail_description_txt"
                        android:text="Biometric Result Description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#555555"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/incentive_biometricResultDetail_layout" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>